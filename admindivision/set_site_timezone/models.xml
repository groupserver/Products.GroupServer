<xf:model id="set_site_timezone"
  xmlns:xf="http://www.w3.org/2002/xforms" 
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  tal:define="site_object here/Scripts/get/division_object;
    current_tz python:context.DivisionConfiguration.getProperty('tz','UTC')">
  <xf:instance>
    <data>
      <submitted>1</submitted>
      <siteid tal:content="site_object/getId" />
      <zone tal:content="current_tz" />
    </data>
  </xf:instance>
  <xf:bind nodeset="zone" required="true()"/>
  <xf:submission action="" method="urlencoded-post" id="change"/>
</xf:model>

