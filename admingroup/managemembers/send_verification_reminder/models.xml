<xf:model id="verification_reminder"
  xmlns:xf="http://www.w3.org/2002/xforms"
  xmlns:tal="http://xml.zope.org/namespaces/tal" 
  tal:define="group_object here/Scripts/get/group_object; 
  site_object here/Scripts/get/division_object">
  <xf:instance>
    <data>
      <submitted>1</submitted>

      <userid tal:content="python:request.get('userId','') or (request.get('form', '') and request['form']['userid'])"/>
            
      <groupid tal:content="group_object/getId">group id</groupid>
      <siteid
        tal:content="site_object/getId">division id</siteid>
     </data>
   </xf:instance>
   <xf:submission method="urlencoded-post" id="send"
     tal:attributes="action request/URL" />
</xf:model>
