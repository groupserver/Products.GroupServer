<?xml version="1.0" ?>
<root xmlns:tal="http://xml.zope.org/namespaces/tal" 
	xmlns:metal="http://xml.zope.org/namespaces/metal" 
	xmlns:xf="http://www.w3.org/2002/xforms">
  <data tal:content="structure python:context.models(method='xml')"/>
  <output>
    <content 
			tal:define="group_members context/Scripts/get/group_members">
			
			<heading1>Edit Group Security Properties</heading1>
    
      <fieldset id="securityproperties">
        <legend>Group Security</legend>

        <xf:select1 appearance="full" model="change_group_security"
          ref="permjoin" class="text">
          <xf:label>Group Joinability</xf:label>
          <xf:hint>Who can join this group</xf:hint>
          <xf:item>
            <xf:label>Anyone, without approval</xf:label>
            <xf:value>anyone</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>Anyone, pending approval</xf:label>
            <xf:value>apply</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>Only those invited</xf:label>
            <xf:value>invite</xf:value>
          </xf:item>
        </xf:select1>

        <xf:select1 appearance="full" model="change_group_security"
          ref="permvisibility" class="text">
          <xf:label>Group Visibility</xf:label>
          <xf:hint>Who can see this group</xf:hint>
          <xf:item>
            <xf:label>Everyone</xf:label>
            <xf:value>anyone</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>Only site and group members</xf:label>
            <xf:value>division</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>Only group members</xf:label>
            <xf:value>group</xf:value>
          </xf:item>
        </xf:select1>
       
        <xf:select1 appearance="full" model="change_group_security"
          ref="permviewmessages" class="text">
          <xf:label>Messages and Files Visibility</xf:label>
          <xf:hint>Who can view the messages and files in this group</xf:hint>
          <xf:item>
            <xf:label>Everyone</xf:label>
            <xf:value>anyone</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>Only site and group members</xf:label>
            <xf:value>division</xf:value>
          </xf:item>
          <xf:item>
            <xf:label>Only group members</xf:label>
            <xf:value>group</xf:value>
          </xf:item>
        </xf:select1>
      </fieldset><!-- security -->

      <xf:submit model="change_group_security" submission="change"
        class="button">
        <xf:label>Change Properties</xf:label>
        <xf:hint>Change the properties of the group</xf:hint>
      </xf:submit>
    </content>
  </output>
</root>
